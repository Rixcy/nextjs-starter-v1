{
    "name": "nextjs-starter",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "next build",
        "commit": "git-cz",
        "dev": "next dev",
        "lint": "npx prettier --write .",
        "sort": "sort-package-json",
        "start": "next start"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
            "npx prettier --write"
        ],
        "**/*.{ts,tsx,js,jsx}": [
            "npx prettier --write"
        ]
    },
    "dependencies": {
        "next": "9.5.3",
        "react": "16.13.1",
        "react-dom": "16.13.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/node": "^14.11.2",
        "@types/react": "^16.9.49",
        "commitizen": "^4.2.1",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "postcss-flexbugs-fixes": "^4.2.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.1.2",
        "sort-package-json": "^1.46.0",
        "tailwindcss": "^1.8.10",
        "typescript": "^4.0.3"
    }
}
